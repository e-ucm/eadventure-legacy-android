<FrameLayout android:id="@+id/FrameLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/White">

	<LinearLayout android:id="@+id/LinearLayout03"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">
		<ImageView android:id="@+id/icon" android:layout_width="wrap_content"
			android:background="@drawable/eadventure1" android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal" android:layout_marginTop="40dip" />
		<VideoView android:id="@+id/VideoView01"
			android:layout_gravity="center_horizontal" android:fadingEdge="horizontal|vertical"
			android:fadingEdgeLength="20dip" android:layout_height="214dip" android:layout_width="320dip"
			android:layout_marginTop="50dip" android:background="@color/White"/>

	</LinearLayout>

	<ImageButton android:id="@+id/ImageButton02"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center"></ImageButton>
	<Button android:id="@+id/ImageButton01" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center_horizontal|bottom"></Button>

</FrameLayout>
